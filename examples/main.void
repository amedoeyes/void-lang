let add = a -> b -> a + b;

let fact = n ->
	if n == 0 then 1 
	else n * fact (n - 1);

let fib = n -> 
	if n == 0 then 0 
	else if n == 1 then 1 
	else fib (n - 1) + fib (n - 2);

let sum = n -> 
	if n == 0 then 0 
	else n + sum(n - 1);

let power = x -> n -> 
	if n == 0 then 1 
	else x * power x (n - 1);

let gcd = a -> b -> 
	if b == 0 then a 
	else gcd b (a % b);
